{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "build": {
    "env": {
      "SHARP_IGNORE_GLOBAL_LIBVIPS": "1",
      "SHARP_PATH": "/tmp/node_modules/sharp"
    }
  },
  "functions": {
    "app/api/*": {
      "memory": 3008,
      "maxDuration": 60
    }
  },
  "installCommand": "npm install --platform=linux --arch=x64 sharp"
}
